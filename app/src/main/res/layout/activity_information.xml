<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#393939"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hardeep.something.Information">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Information"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:textColor="#ecf0f1"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/textView7"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:textColor="#ecf0f1"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:textColor="#ecf0f1"
        android:textSize="20sp"
        android:layout_marginTop="38dp"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/settingsName"
        android:layout_toStartOf="@+id/settingsName"
        android:height="45dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsName"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="left|bottom"
        android:textColor="#ecf0f1"
        android:textSize="18dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:singleLine="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/settingsId"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/settingsName"
        android:layout_alignEnd="@+id/settingsName"
        android:gravity="left|bottom"
        android:textColor="#ecf0f1"
        android:textSize="18dp"
        android:textStyle="normal"
        android:typeface="serif"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/settingUpdate"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/settingsId"
        android:layout_alignLeft="@+id/settingsId"
        android:layout_alignStart="@+id/settingsId"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:background="@drawable/mybuttons"
        android:textColor="#ecf0f1"
        android:textSize="18dp"
        android:textStyle="normal|bold"
        android:typeface="serif" />
</RelativeLayout>
