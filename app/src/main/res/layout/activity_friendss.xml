<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#393939"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hardeep.something.Friendss">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendsListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:divider="#006064"
        android:layout_marginTop="20dp"
        android:dividerHeight="2dp"
        android:layout_below="@+id/friendsEditText" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendsPBar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:indeterminate="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/friendsEditText"
        android:textColor="#ecf0f1"
        android:hint="Enter Username"
        android:textColorHint="#ecf0f1"
        android:inputType="textNoSuggestions"
        android:textStyle="normal"
        android:typeface="serif"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/friendsListView" />


</RelativeLayout>
